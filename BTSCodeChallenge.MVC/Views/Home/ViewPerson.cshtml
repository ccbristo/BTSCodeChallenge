@{
    ViewBag.Title = "This Is The Person You Saved";
}

@section Scripts {
    <script src="~/Scripts/Controllers/Home/IndexController.js"></script>
}

<h2>@ViewBag.Title.</h2>

<div class="row" data-bind="with: CurrentPerson">
    <div class="col-lg-3">
        <label>First Name: </label>
        <label data-bind="text: FirstName"></label>
    </div>
    <div class="col-lg-3">
        <label>Last Name: </label>
        <label data-bind="text: LastName"></label>
    </div>
    <div class="col-lg-3">
        <label>Email: </label>
        <label data-bind="text: Email"></label>
    </div>
    <div class="col-lg-3">
        <label>Date of Birth: </label>
        <label data-bind="text: DateOfBirth"></label>
    </div>
</div>
